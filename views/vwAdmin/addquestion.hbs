<main>
    <form method="post" id="frmRegister">

        <div class="card mb-3">
            <h4 class="card-header">
                ADD NEW QUESTION
            </h4>
        <div class="card-body">

        <div class="form-group">
            <label for="word">Word:</label>
            <select name="word">
                {{#each this.wordlist}}
                    <option value="{{wordid}}">{{wordname}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="txtOptionA">Option A:</label>
            <select name="optiona">
                {{#each this.wordlist}}
                    <option value="{{wordname}}">{{wordname}}</option>
                {{/each}}
            </select>
            <label id="OptionA"></label>
        </div>

        <div class="form-group">
            <label for="txtOptionB">Option B:</label>
            <select name="OptionB">
                {{#each this.wordlist}}
                    <option value="{{wordname}}">{{wordname}}</option>
                {{/each}}
            </select>
            <label id="txtOptionB"></label>
        </div>

        <div class="form-group">
            <label for="txtOptionC">Option C:</label>
            <select name="OptionC">
                {{#each this.wordlist}}
                    <option value="{{wordname}}">{{wordname}}</option>
                {{/each}}
            </select>
            <label id="txtOptionC"></label>
        </div>

        <div class="form-group">
            <label for="txtOptionD">Option D:</label>
            <select name="OptionD">
                {{#each this.wordlist}}
                    <option value="{{wordname}}">{{wordname}}</option>
                {{/each}}
            </select>
            <label id="txtOptionD"></label>
        </div>

        <div class="form-group">
            <label for="txtQuestion">Question</label>
            <textarea name="question" type="text" class="form-control" id="txtQuestion">
            </textarea>
        </div>

        <div class="card-footer text-muted">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check" aria-hidden="true"></i>
                Submit
            </button>
        </div>

    </form>

</main>