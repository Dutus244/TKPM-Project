{{#section 'css'}}
    <link href="https://fonts.googleapis.com/css?family=Sriracha" rel="stylesheet">
    <link rel="stylesheet" href="/public/CSS/admin/userList.css">
{{/section}}

<div class="container">
    <div id="username">USER LIST</div>
    <div class="user-container">
        <div id="usercount" class="title">User count: {{this.count}}</div>
        {{#if this.empty}}

        {{else}}
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>User ID</th>
                    <th>UserName</th>
                    <th>Create Time</th>
                    <th>Update Time</th>
                    <th>Lock Account</th>
                </tr>
                </thead>
                <tbody>
                {{#each this.list}}
                    <tr>
                        <td>{{UserID}}</td>
                        <td>{{UserName}}</td>
                        <td>{{FormattedCreateTime}}</td>
                        <td>{{FormattedUpdateTime}}</td>
                        {{#ifEquals LockAccount 0}}
                            <td class="text-right">
                                <a class="btn btn-sm btn-outline-primary btnLock" href="/admin/lock?id={{UserID}}" role="button" title="Lock Account">
                                <i class="bi bi-lock bg-transparent" aria-hidden="true"></i>
                                </a>
                            </td>
                        {{/ifEquals}}
                        {{#ifEquals LockAccount 1}}
                            <td class="text-right">
                                <a class="btn btn-sm btn-outline-primary btnUnlock" href="/admin/unlock?id={{UserID}}" role="button" title="Unlock Account">
                                <i class="bi bi-unlock bg-transparent" aria-hidden="true"></i>
                                </a>
                            </td>
                        {{/ifEquals}}
                    </tr>
                {{/each}}
                </tbody>
            </table>
        {{/if}}
    </div>
</div>