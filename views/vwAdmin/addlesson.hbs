    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>

    $('#fuMain').fileinput({
        language: 'vi',
        theme: 'fa4',
        dropZoneEnabled: false,
        maxFileCount: 1,
        allowedFileExtension: ['png', 'jpg', 'jpeg'],

    });

    tinymce.init({
        selector: "#txtDescription",
        height: 200,
        menubar: false,
        toolbar: [
            'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
        ],
    });

    $('#frmRegister').on('submit', function (e) {
        e.preventDefault();

        const lessonname = $('#txtLessonname').val();
        if (!lessonname.length) {
            alert('Please input lesson name')
            $('#txtLessonname').css('background-color', '#f2cece')
            $('#txtLessonname').addClass('form-control-error')
            return
        }

        const img = $('#fuMain').val();
        if (!img.length) {
            alert('Please upload photo')
            return
        }

        const description = $("#txtDescription").val();
        if (!description.length) {
            alert('Please input description')
            return
        }

        $('#frmRegister').off('submit').submit();
    })
</script>

{{/section}}
<main>
    <div class="formdes">
        {{#if msg}}
        <div class="alert alert-success alert-dismissible fade show text-center pr-0" role="alert">
            {{msg}}
            <button type="button" class="close h-100" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true" class="bg-inherit">&times;</span>
            </button>
        </div>
        {{/if}}

        <form method="post" id="frmRegister" enctype="multipart/form-data">
            <div class="card mb-3">
                <h4 class="card-header">
                    ADD NEW LESSON
                </h4>
                <div class="card-body">

                    <div class="form-group">
                        <label for="txtCatname">Lesson's name:</label>
                        <input name="lessonname" type="text" class="form-control" id="txtLessonname" autofocus>
                    </div>

                    <div class="form-group">
                        <label for="fuMain">Lesson's avatar</label>
                        <input type="file" multiple name="fuMain" id="fuMain">
                    </div>

                    <div class="form-group">
                        <label for="txtDescription">Description</label>
                        <textarea name="description" type="text" class="form-control" id="txtDescription">
                    </textarea>
                    </div>

                    <div class="card-footer text-muted">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-check" aria-hidden="true"></i>
                            Save
                        </button>
                        <a href="/admin/lessonlist">
                            <button type="button" class="btn btn-primary">
                                <i class="fa fa-check" aria-hidden="true"></i>
                                Back to lesson list
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>